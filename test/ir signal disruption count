#!/usr/bin/env python3
import RPi.GPIO as GPIO
import time
import signal

# Configuration
IR_RX_PIN = 18    # BCM pin for beam receiver (input)
IR_TX_PIN = 5     # BCM pin for IR emitter driver (output)
COOLDOWN = 0.6    # seconds to ignore repeated triggers

# State
count = 0
last_time = 0.0
running = True

def setup():
    GPIO.setmode(GPIO.BCM)
    GPIO.setup(IR_RX_PIN, GPIO.IN, pull_up_down=GPIO.PUD_UP)
    GPIO.setup(IR_TX_PIN, GPIO.OUT)
    GPIO.output(IR_TX_PIN, GPIO.HIGH)  # keep emitter on

def cnt(channel=None):
    global count, last_time
    now = time.time()
    if now - last_time >= COOLDOWN:
        count += 1
        last_time = now
        print('Beam disruption. cnt =', count)

def loop():
    # No software debounce (bouncetime omitted)
    GPIO.add_event_detect(IR_RX_PIN, GPIO.FALLING, callback=cnt)
    try:
        while running:
            time.sleep(1)
    except KeyboardInterrupt:
        pass

def destroy():
    try:
        GPIO.output(IR_TX_PIN, GPIO.LOW)
    except Exception:
        pass
    GPIO.cleanup()

def _signal_handler(sig, frame):
    global running
    running = False

if __name__ == '__main__':
    signal.signal(signal.SIGINT, _signal_handler)
    signal.signal(signal.SIGTERM, _signal_handler)
    setup()
    try:
        loop()
    finally:
        destroy()

